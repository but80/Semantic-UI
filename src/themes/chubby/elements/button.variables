/*-------------------
   Button Variables
--------------------*/

/* Button Variables */

@textTransform: none;
@fontWeight: normal;
@textColor: rgba(255, 255, 255, 0.87);

@verticalMargin: 0em;
@horizontalMargin: 0.25em;
@lineHeight: 1em;
@verticalPadding: @inputVerticalPadding;
@horizontalPadding: 1.5em;
@invertedBorderSize: @3px;

@basicTextColor: @textColor;
@basicBackground: #333333;
@basicHoverBackground: lighten(@basicBackground, 5);
@basicDownBackground: lighten(@basicBackground, 10);
@basicActiveBackground: lighten(@basicBackground, 5);
@basicFocusBackground: lighten(@basicBackground, 8);
@basicBorderRadius: 0em;
@basicFontWeight: bold;
@basicTextTransform: none;

@secondaryBackgroundImage: @coloredBackgroundImage;
@secondaryTextColor: #FFFFFF - @invertedTextColor;

@primaryColor: @teal;

@borderRadius: 0em;

@backgroundColor: @solidBorderColor;
@backgroundImage: none;

@hoverBackgroundColor: darken(@backgroundColor, 4);
@hoverBackgroundImage: none;

@downBackgroundColor: darken(@backgroundColor, 8);
@downBackgroundImage: none;

@activeBackgroundColor: darken(@backgroundColor, 4);
@activeBackgroundImage: none;

@focusBackgroundColor: darken(@backgroundColor, 6.5);
@focusBackgroundImage: none;

@orBackgroundColor: #333333;

@loadingBackgroundColor: darken(@backgroundColor, 8);

@compactVerticalPadding: (@verticalPadding * 0.5);
@compactHorizontalPadding: (@horizontalPadding * 0.5);

@labeledIconBackgroundColor: transparent;

@mini: 0.7rem;
@tiny: 0.75rem;
@small: 0.8rem;
@medium: 0.92rem;
@large: 1rem;
@big: 1.125rem;
@huge: 1.2rem;
@massive: 1.3rem;
